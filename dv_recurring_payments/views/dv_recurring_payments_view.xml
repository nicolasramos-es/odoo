<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="account_recurring_payments_form_view" model="ir.ui.view">
            <field name="name">Recurring Payment</field>
            <field name="model">account.recurring.payments</field>
            <field name="arch" type="xml">
                <form string="Recurring Payment">
                    <header>
                        <field name="state" widget="statusbar" clickable="1"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="pay_time"/>
                            </group>
                            <group>
                                <field name="recurring_period"/>
                                <field name="recurring_interval" class="o_address_zip"/>
                            </group>
                            <group>
                                <field name="partner_id" attrs="{'invisible':[('pay_time','!=','pay_later')]}"/>
                                <field name="company_id" invisible="1"/>
                            </group>
                            <group>
                                <field name="date"/>
                                <field name="date_creation"/>
                                <field name="next_date"/>
                                <field name="amount"/>
                            </group>
                        </group>

                        <notebook>
                            <page name="accounting_info" string="Accounting information">
                                <group>
                                    <group>
                                        <field name="credit_account"/>
                                        <field name="debit_account"/>
                                    </group>
                                    <group>
                                        <field name="journal_id"/>
                                        <field name="journal_state"/>
                                    </group>
                                </group>
                                <group>
                                    <group>
                                        <field name="analytic_account_id"/>
                                    </group>
                                </group>
                            </page>
                            <page name="other_info" string="Otra informaciÃ³n">
                                <group>
                                    <field name="description" placeholder="Description..." nolabel="1" colspan="4"/>
                                </group>
                            </page>
                            
                         <page name="remaining_entries" string="Pending entries">
                            <field name="recurring_lines">
                                <tree string="Recurring Lines" create="false" editable="top">
                                    <field name="date"/>
                                    <field name="template_name"/>
                                    <field name="amount"/>
                                    <field name="tmpl_id" invisible="1"/>
                                </tree>
                            </field>
                         </page>
                     
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="account_recurring_payments_tree_view" model="ir.ui.view">
            <field name="name">Recurring Payment</field>
            <field name="model">account.recurring.payments</field>
            <field name="arch" type="xml">
                <tree string="Recurring Payment">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="debit_account"/>
                    <field name="credit_account"/>
                    <field name="journal_id"/>
                    <field name="date"/>
                    <field name="date_creation"/>
                    <field name="amount"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>


        <record id="action_account_recurring_payments_view" model="ir.actions.act_window">
            <field name="name">Recurring Payment</field>
            <field name="res_model">account.recurring.payments</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="account_recurring_payments_tree_view"/>
            <field name="target">current</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Click here to create a new recurring payment template.</p>
            </field>
        </record>

        <menuitem id="account_recurring_payments_child1" name="Recurring Payment" groups="account.group_account_user"
                  action="action_account_recurring_payments_view" parent="account.menu_finance_entries_management"/>
    </data>
</odoo>
