<?xml version="1.0" encoding="utf-8"?>

<openerp>
    <data>
        <record model="ir.ui.view" id="select_lot_purchase_order_line_form">
            <field name="name">select_lot_purchase.order.line.form</field>
            <field name="model">purchase.order.line</field>
            <field name="inherit_id" ref="purchase.purchase_order_line_form"/>
            <field name="arch" type="xml">
                <field name="price_unit" position="after">
                    <field name="prodlot2_id" domain="[('product_id','=?', product_id)]"
                           context="{'product_id': product_id}" groups="stock.group_production_lot"/>
                </field>
            </field>
        </record>
        <record model="ir.ui.view" id="select_lot_purchase_order_line_tree">
            <field name="name">select_lot_purchase.order.line.tree</field>
            <field name="model">purchase.order.line</field>
            <field name="inherit_id" ref="purchase.purchase_order_line_tree"/>
            <field name="arch" type="xml">
                <field name="price_unit" position="after">
                    <field name="prodlot2_id" domain="[('product_id','=?', product_id)]"
                           context="{'product_id': product_id}" groups="stock.group_production_lot"/>
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="select_lot_purchase_order_form">
            <field name="name">select_lot_purchase.order.form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']/tree/field[@name='price_unit']" position="after">
                    <field name="prodlot2_id" domain="[('product_id','=?', product_id)]"
                           context="{'product_id': product_id}" groups="stock.group_production_lot"/>
                </xpath>
            </field>
        </record>
    </data>
</openerp>